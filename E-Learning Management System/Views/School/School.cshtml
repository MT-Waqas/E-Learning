@model E_Learning_Management_System.Models.School

@{
    ViewBag.Title = "School";
}
    <section class="hk-sec-wrapper">
        <h5 class="hk-sec-title">Default Layout</h5>
        <p class="mb-25">More complex forms can be built using the grid classes. Use these for form layouts that require multiple columns, varied widths, and additional alignment options.</p>
        <div class="row">
            <div class="col-sm">
                @using (Html.BeginForm("School", "School", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="username">School Name</label>
                        <div class="input-group">
                            @*<div class="input-group-prepend">
                                <span class="input-group-text"></span>
                            </div>*@
                            @Html.EditorFor(model => model.SchoolName, new { htmlAttributes = new { @class = "form-control", @id = "username", @placeholder = "School Name" } })
                            @Html.ValidationMessageFor(model => model.SchoolName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*<div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" id="email" placeholder="you@example.com" type="email">
                    </div>

                    <div class="form-group">
                        <label for="email">Password</label>
                        <input class="form-control" id="password" placeholder="Password" type="password">
                    </div>*@

                    <div class="form-group">
                        <label for="address">Address</label>
                        @Html.EditorFor(model => model.SchoolAddress, new { htmlAttributes = new { @class = "form-control", @id = "address", @placeholder = "1234 Main St" } })
                        @Html.ValidationMessageFor(model => model.SchoolAddress, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="cc-number">Contact Number</label>
                        @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control", @id = "cc-number", @data_mask = "9999-9999999" } })
                        @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="country">Status</label>
                        @Html.DropDownListFor(model => model.Status, new List<SelectListItem> {
                 new SelectListItem {Text="Active",Value="1"},new SelectListItem {Text="InActive",Value="2"} }, "Select the Status", new { @id = "country", @class = "form-control custom-select d-block w-100" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="upload">Upload Image</label>
                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Upload</span>
                            </div>
                            <div class="form-control text-truncate" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                            <span class="input-group-append">
                                <span class=" btn btn-primary btn-file">
                                    <span class="fileinput-new">Select file</span><span class="fileinput-exists">Change</span>
                                    @if (Model != null)
                                    {
                                        <img src="@Model.Image" height="50" width="50" />
                                    }
                                    <input type="file" name="UploadFile" class=" file file-name" />
                                    @Html.HiddenFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UploadFile, "", new { @class = "text-danger" })
                                </span>
                                <a href="#" class="btn btn-secondary fileinput-exists" data-dismiss="fileinput">Remove</a>
                            </span>
                        </div>
                    </div>


                    <button class="btn btn-primary" type="submit">Submit</button>
                }
            </div>
        </div>
        <div>
            @Html.ActionLink("Schools", "Schools",new { })
        </div>
    </section>
